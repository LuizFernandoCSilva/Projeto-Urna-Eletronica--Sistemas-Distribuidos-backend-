generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Voters {
  id   String  @id @default(auto()) @map("_id") @db.ObjectId
  name String?
  cpf  String? @unique
}

model Votes {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  voter_id     String?
  candidate_id String?
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt
}
